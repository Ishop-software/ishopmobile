<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="409dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--alternative unit-->




    <TextView
        android:id="@+id/tsetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:text="Tax Slab Entry"
        android:textColor="@color/btn_color"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/taxslabentrylayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tsttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:text="Tax Slab Title"
            android:textColor="@color/black"
            android:textStyle="bold" />



        <EditText
            android:id="@+id/taxslabtitleedit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_shape"
            android:backgroundTint="@color/bg_color"
            android:padding="10dp"
            android:text="Item Name"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tclayout"
        android:layout_marginTop="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/taxlayout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/taxtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Tax %"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/taxedit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_shape"
                android:backgroundTint="@color/bg_color"
                android:padding="10dp"

                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>



        <!--category-->

        <LinearLayout
            android:id="@+id/categorylayout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/categorytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Category"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/categroyredit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_shape"
                android:backgroundTint="@color/bg_color"
                android:padding="10dp"

                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>


    <!--cessApppp-->
    <LinearLayout
        android:id="@+id/calayout"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/cesslayout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cesstxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Cess %"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cessedit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_shape"
                android:backgroundTint="@color/bg_color"
                android:padding="10dp"

                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>



        <!--aply-->

        <LinearLayout
            android:id="@+id/applylayout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/applytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Applicable On"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/applyedit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_shape"
                android:backgroundTint="@color/bg_color"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>


    <!--specialcessApppp-->
    <LinearLayout
        android:id="@+id/scesslayout"
        android:layout_marginTop="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/specialcesslayout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/specialcesstxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Special Cess"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/specialcessedit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_shape"
                android:backgroundTint="@color/bg_color"
                android:padding="10dp"

                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>



        <!--asper-->

        <LinearLayout
            android:id="@+id/asperlayout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/aspertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="As Per"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/asperedit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_shape"
                android:backgroundTint="@color/bg_color"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>

    <!--calcualtetax-->

    <TextView
        android:id="@+id/calculatetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Calculate Tax"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/chcklayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text=" On MRP" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="On Free Goods also" />
    </LinearLayout>





</LinearLayout>





